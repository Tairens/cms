{% extends 'base.html.twig' %}
{% block body %}
    <div class="singup">
        <h3>CREATE AN ACCOUNT</h3>
        <div class="signup-main">
            <form>
                <input id="fname" type="text" value="First Name"/>
                <input id="lname" type="text" value="Last Name" class="lessgap"/>
                <input id="email" type="text" value="Email Id" class="email"/>
                <input id="password" type="password" value="Password"/>
                <input id="repassword" type="password" value="Confirm Password" class="lessgap"/>
                <input id="phonenumber" type="text" value="Phone Number" class="phone"/>
                <div class="send-button">
                    <input  type="submit" value="Sign me up" />
                </div>
                <p>Already have an account?  <a href="#">Login here</a></p>
            </form>
        </div>
    </div>	
{% endblock %}